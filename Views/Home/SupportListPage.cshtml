@using Hotel.org.Interface
@using Hotel.org.Models
@model List<Support>
@inject ISupportService _supportService;

<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-semibold mb-4">My Support Messages</h2>

    @if (Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="table-auto w-full">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left">Subject</th>
                        <th class="px-4 py-2 text-left">Message</th>
                        <!-- Add more columns as needed -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <td class="border px-4 py-2">@message.Subject</td>
                            <td class="border px-4 py-2">@message.Message</td>
                            <!-- Add more columns as needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-gray-500">You have no support messages.</p>
    }

    <!-- Button to create a new support message -->
    <div class="mt-8">
        <a href="@Url.Action("SupportPage", "Home")" class="text-white bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-md inline-block">
            Create New Support Message
        </a>
    </div>
</div>
