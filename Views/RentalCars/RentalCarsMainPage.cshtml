@using Hotel.org.Interface
@inject ICarService _carservice;


<div class="container mx-auto">
    <div class="flex items-center justify-center mt-10">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary  hover:bg-primary-700  px-4 py-2 rounded-md text-sm mr-4">Hotels</a>
        <a href="@Url.Action("FlightMainPage", "Flight")" class="btn btn-outline-primary border border-primary-600 hover:bg-primary-600 hover:text-white px-4 py-2 rounded-md text-sm">Flights</a>
        <a href="@Url.Action("RentalCarsMainPage", "RentalCars")" class="btn btn-outline-primary btn-primary text-white border border-primary-600 hover:bg-primary-600 hover:text-white px-4 py-2 rounded-md text-sm ml-3 ml-3">Rental Cars</a>
    </div>




    <div class="w-full">
        <section class="relative  overflow-hidden" style="height:500px;">
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/50 to-transparent"></div>
            <div class="relative z-10 mx-auto flex h-full max-w-6xl flex-col items-center justify-center px-4 text-center text-dark">
                <h1 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">Find Your Perfect Rental Car</h1>
                <p class="mt-4 text-lg">Explore the world with our wide selection of rental cars.</p>
            </div>
        </section>
        <section class="relative -mt-20 z-10 mx-auto max-w-6xl px-4">
            <div class="rounded-lg bg-white p-6 shadow-lg">
                <form asp-action="CarSearch" asp-controller="RentalCars" method="get" class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                    <div>
                        <label for="location" class="mb-2 block text-sm font-medium text-gray-700">
                            Location
                        </label>
                        <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                               id="location"
                               placeholder="Enter a city or airport"
                               type="text" />
                    </div>
                    <div>
                        <label for="pick-up" class="mb-2 block text-sm font-medium text-gray-700">
                            Pick-up Date
                        </label>
                        <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                               id="StartDate"
                               placeholder="Enter a city or airport"
                               type="text" />
                    </div>
                    <div>
                        <label for="drop-off" class="mb-2 block text-sm font-medium text-gray-700">
                            Drop-off Date
                        </label>
                        <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                               id="EndDate"
                               placeholder="Enter a city or airport"
                               type="text"
                               required/>
                    </div>
                    <button class="btn btn-dark w-100" type="submit">Search</button>
                </form>
            </div>
        </section>
    </div>
  <section class="container mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16 lg:py-20">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-[#1f2937] dark:text-white mb-8">Available Cars</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">

                @foreach (var item in await _carservice.GetRentalCarsAsync())
                {
                    <div class="bg-white dark:bg-[#111827] rounded-lg shadow-lg overflow-hidden">
                        <div class="aspect-video bg-gray-200 dark:bg-[#1f2937]">
                            <img src="/placeholder.svg"
                                 alt="Car Model"
                                 width="400"
                                 height="225"
                                 class="object-cover w-full h-full"
                                 style="aspect-ratio: 400 / 225; object-fit: cover;" />
                        </div>
                        <div class="p-4">
                            <h3 class="text-lg font-bold text-[#1f2937] dark:text-white mb-2">@item.Make</h3>
                            <p class="text-[#4b5563] dark:text-[#9ca3af] mb-4">@item.Model</p>
                            <div class="flex items-center justify-between">
                                <p class="text-lg font-bold text-primary-500">@item.PricePerDay/day</p>
                                <button class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-3 rounded-md">
                                    Rent Now
                                </button>
                            </div>
                        </div>
                    </div>
                }
    </div>
  </section>
</div>
</div>



