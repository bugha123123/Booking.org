@using Hotel.org.Models
@model List<Hotels>

<section class="container-fluid d-flex flex-row gap-4 p-6 md:p-10">
    <div class="col-4">
        <div class="space-y-6">
            <div class="grid gap-4">
                <h2 class="text-2xl font-bold">Filters</h2>
                <!-- Filter options here -->
            </div>
            <div class="d-flex justify-end">
                <button class="btn btn-primary">
                    Clear Filters
                </button>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="grid gap-6">
            <div class="d-flex justify-between align-items-center">
                <h2 class="text-2xl font-bold">Search Results</h2>
                <!-- Sort by dropdown here -->
            </div>
            <div class="grid gap-6">
                @foreach (var hotel in Model)
                {
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="@hotel.RoomImage" alt="Hotel Image" class="card-img" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@hotel.Name</h5>
                                    <p class="card-text">Located In @hotel.Address</p>

                                    <p class="card-text">@hotel.Description</p>
                                 
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="text-2xl font-bold">@hotel.AveragePricePerNight/night</div>

                                        <button class="btn btn-primary">Book Now</button>
                                    </div>
                                    <div class="rating">
                                        @for (int i = 0; i < hotel.Rating; i++)
                                        {
                                            <span class="bi bi-star checked"></span>
                                        }
                                        @for (int i = 0; i < (5 - hotel.Rating); i++)
                                        {
                                            <span class="bi bi-star"></span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
